{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "jsx": "react-jsx",
        "resolveJsonModule": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "typeRoots": ["./node_modules/@types", "./server/src/typings"]
    },
    "include": [
        "server",
        "client"
    ],
    "exclude": [
        "**/*.jest.**",
        "**/__tests__/data"
    ]
}