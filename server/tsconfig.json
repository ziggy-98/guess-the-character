{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "types": [
            "node"
        ],
        "typeRoots": ["../node_modules/@types", "./node_modules/@types", "./src/typings"]
    },
    "include": [
        "src"
    ]
}